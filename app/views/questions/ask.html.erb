
<div class="container mt-5">
    <div class="text-center">
        <h1>Ask the Coach!</h1>
    </div>
    <form action="/answer" data-turbo="false" class="mt-3">
        <div class="input-group">
            <input type="text" name="question" class="form-control" placeholder="Ask away..." value="<%= params[:question] %>">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Ask!</button>
            </div>
        </div>
    </form>
</div>
